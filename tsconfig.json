{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"moduleResolution": "node",
		"declaration": true,
		"rootDir": "src",
		"sourceMap": false,
		"strict": true,
		"esModuleInterop": true,
		"downlevelIteration": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noImplicitAny": false,
		"noFallthroughCasesInSwitch": true,
		"outDir": "lib",
		"lib": ["es2018"]
	},
	"include": ["src", "test"]
}
